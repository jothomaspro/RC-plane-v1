#ifndef LORARADIO
#define LORARADIO

#include <LoRa.h>

class LoRaRadio{
public:
	LoRaRadio(uint8_t csPin, uint8_t rstPin, uint8_t irqPin, byte localAddress, byte destination);
	void begin(long freq = 433E6);
	void sendMessage(String outgoing);
private:
	byte _localAddress;
	byte _destination;
};



#endif
