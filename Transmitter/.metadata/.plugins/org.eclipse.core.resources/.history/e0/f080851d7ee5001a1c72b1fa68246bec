#ifndef JOYSTICK
#define JOYSTICK

class Joystick{
public:
	Joystick(uint16_t x, uint16_t y, uint16_t button) : _x(x), _y(y), _button(button){
		pinMode(_x, INPUT_PULLDOWN);
		pinMode(_y, INPUT_PULLDOWN);
		pinMode(_button, INPUT_PULLDOWN);
	}
	uint16_t getX(){
		return analogRead(_x);
	}
	uint16_t getY(){
		return analogRead(_y);
	}

	uint8_t getButton(){
		return _button;
	}
private:
	uint16_t _x;
	uint16_t _y;
	uint8_t _button;
};

#endif JOYSTICK
